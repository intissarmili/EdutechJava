<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5;"
      spacing="10" prefWidth="300">

    <Label fx:id="dateLabel" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
    <Label fx:id="timeLabel"/>
    <Label fx:id="tutorLabel"/>

    <HBox spacing="10">
        <Button fx:id="detailsButton" text="Details" style="-fx-background-color: #f0f0f0;"/>
        <Button fx:id="reserveButton" text="Reserve" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</VBox>