<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ListeEventController"
            stylesheets="/styles/event-styles.css">
    <top>
        <VBox spacing="15" styleClass="header-container">
            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Gestion des événements" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="search-container">
                    <TextField fx:id="searchField" promptText="Rechercher par titre, description..."
                               prefWidth="250" styleClass="search-field"/>
                    <Button text="Rechercher" onAction="#handleSearch" styleClass="search-button"/>
                </HBox>
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Button text="Ajouter un événement" onAction="#openAddForm" styleClass="add-button">
                    <graphic>
                        <Text text="+" styleClass="button-icon"/>
                    </graphic>
                </Button>
                <Button text="Exporter" onAction="#handleExport" styleClass="export-button">
                    <graphic>
                        <Text text="↓" styleClass="button-icon"/>
                    </graphic>
                </Button>
                <Button text="Rafraîchir" onAction="#refreshTable" styleClass="refresh-button">
                    <graphic>
                        <Text text="↻" styleClass="button-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="content-area">
            <FlowPane fx:id="eventsContainer" hgap="20" vgap="20" prefWrapLength="800">
                <padding>
                    <Insets top="20" right="25" bottom="20" left="25"/>
                </padding>
            </FlowPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="footer">
            <padding>
                <Insets top="10" right="25" bottom="10" left="25"/>
            </padding>
            <Label fx:id="statusLabel" text="Prêt"/>
        </HBox>
    </bottom>
</BorderPane>