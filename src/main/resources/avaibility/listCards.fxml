<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ListAvaibilityController"
            style="-fx-background-color: #f4f4f4;">
    <!-- Navbar -->
    <fx:include source="/navbar.fxml" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>


    <!-- Header with Add Button -->
    <HBox spacing="20" layoutX="20" layoutY="60"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Tutor Availability"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"
               HBox.hgrow="ALWAYS"/>

        <Button text="Add Availability"
                fx:id="addButton"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"
                onAction="#handleAddAvaibility"/>
    </HBox>
    <!-- Replace the filter HBox in your FXML with this: -->
    <!-- Replace the filter section with this: -->
    <HBox spacing="10" style="-fx-padding: 10px;"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <Label text="Filter by date:"/>
        <DatePicker fx:id="dateFilter">
            <tooltip>
                <Tooltip text="Select date to filter availabilities"/>
            </tooltip>
        </DatePicker>
        <Button fx:id="filterButton" text="Apply Filter"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="clearFilterButton" text="Show All"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>


    <!-- Main Content Area -->
    <StackPane fx:id="contentPane"
               layoutX="20" layoutY="100"
               AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
               AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="20">

        <!-- Default view (list of cards) -->
        <ScrollPane fitToWidth="true">
            <VBox fx:id="cardsContainer" spacing="15" style="-fx-padding: 10;"/>
        </ScrollPane>

        <!-- Details View (initially hidden) -->
        <AnchorPane fx:id="detailsPane" visible="false">
            <Label text="Availability Details"
                   style="-fx-font-size: 20; -fx-font-weight: bold;"
                   layoutX="20" layoutY="20"/>

            <VBox spacing="10" layoutX="20" layoutY="60">
                <Label fx:id="detailsDate" style="-fx-font-size: 14;"/>
                <Label fx:id="detailsTime" style="-fx-font-size: 14;"/>
                <Label fx:id="detailsTutor" style="-fx-font-size: 14;"/>

                <Button text="Back" onAction="#handleBackToList"
                        style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-padding: 5 10;"/>
            </VBox>
        </AnchorPane>
    </StackPane>

</AnchorPane>