<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditEventController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label styleClass="title-label" text="Modifier un événement" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <GridPane hgap="10.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="80.0" prefHeight="100.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Titre :" GridPane.rowIndex="0" />
                        <TextField fx:id="tfTitle" promptText="Titre de l'événement" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Catégorie :" GridPane.rowIndex="1" />
                        <ComboBox fx:id="cbCategory" promptText="Choisir une catégorie" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Date :" GridPane.rowIndex="2" />
                        <DatePicker fx:id="dpDate" promptText="Date de l'événement" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Heure (HH:mm) :" GridPane.rowIndex="3" />
                        <TextField fx:id="tfTime" promptText="Ex: 14:30" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Photo :" GridPane.rowIndex="4" />
                        <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <Label fx:id="lblImagePath" HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnImage" mnemonicParsing="false" text="Parcourir..." onAction="#handleChooseImage" />
                        </HBox>

                        <Label text="Description :" GridPane.rowIndex="5" GridPane.valignment="TOP">
                            <GridPane.margin>
                                <Insets top="5.0" />
                            </GridPane.margin>
                        </Label>
                        <TextArea fx:id="taDescription" promptText="Description de l'événement" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                </GridPane>

                <Separator />

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleCancel" text="Annuler" />
                        <Button fx:id="btnUpdate" defaultButton="true" mnemonicParsing="false" onAction="#handleUpdate" text="Mettre à jour" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</AnchorPane>