<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EditEventController"
            stylesheets="@/vue/application.css">
    <children>
        <VBox spacing="20.0" styleClass="form-container" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <padding>
                <Insets top="25" right="30" bottom="25" left="30"/>
            </padding>

            <HBox alignment="CENTER">
                <Label text="Modifier un événement" styleClass="form-title">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </HBox>

            <Separator/>

            <GridPane hgap="20.0" vgap="20.0" styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" halignment="RIGHT" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
                </columnConstraints>

                <!-- Titre -->
                <Label text="Titre:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <VBox spacing="3" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <TextField fx:id="tfTitle" promptText="Titre de l'événement" styleClass="form-field" maxWidth="Infinity" />
                </VBox>

                <!-- Catégorie -->
                <Label text="Catégorie:" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <VBox spacing="3" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <ComboBox fx:id="cbCategory" promptText="Choisir une catégorie" styleClass="form-field" maxWidth="Infinity" />
                </VBox>

                <!-- Date -->
                <Label text="Date:" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <VBox spacing="3" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <DatePicker fx:id="dpDate" promptText="Date de l'événement" styleClass="form-field" maxWidth="Infinity" />
                </VBox>

                <!-- Heure -->
                <Label text="Heure (HH:mm):" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <VBox spacing="3" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <TextField fx:id="tfTime" promptText="Ex: 14:30" styleClass="form-field" />
                </VBox>

                <!-- Photo -->
                <Label text="Photo:" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4" alignment="CENTER_LEFT">
                    <Button fx:id="btnImage" text="Parcourir..." onAction="#handleChooseImage" styleClass="button-browse" />
                    <Label fx:id="lblImagePath" styleClass="file-path-label" HBox.hgrow="ALWAYS" />
                </HBox>

                <!-- Description -->
                <Label text="Description:" styleClass="form-label" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="8.0" />
                    </GridPane.margin>
                </Label>
                <VBox spacing="3" GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <TextArea fx:id="taDescription" promptText="Description de l'événement" wrapText="true" styleClass="form-field" prefHeight="120" />
                </VBox>
            </GridPane>

            <Separator />

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Button fx:id="btnCancel" onAction="#handleCancel" text="Annuler" styleClass="button-cancel" />
                <Button fx:id="btnUpdate" defaultButton="true" onAction="#handleUpdate" text="Mettre à jour" styleClass="button-primary" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>