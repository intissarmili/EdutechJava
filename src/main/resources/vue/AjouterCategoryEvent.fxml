<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.*?>
<?import java.net.URL?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AjouterCategoryEventController"
           styleClass="modal-background">

    <stylesheets>
        <URL value="@/styles/global.css" />
    </stylesheets>

    <VBox styleClass="form-container" maxWidth="500" maxHeight="450" spacing="15">
        <effect>
            <DropShadow color="#00000040" radius="10" />
        </effect>

        <HBox alignment="CENTER" styleClass="form-header">
            <Label text="Ajouter une nouvelle catégorie d'événement" styleClass="form-title"/>
        </HBox>

        <Separator />

        <VBox spacing="18" styleClass="form-content">
            <VBox spacing="5">
                <Label text="Lieu" styleClass="field-label" />
                <TextField fx:id="tfLocation" promptText="Lieu (minimum 6 caractères)" styleClass="form-field" />
                <Label fx:id="locationErrorLabel" text="Le lieu doit contenir au moins 6 caractères" styleClass="error-text" visible="false" />
            </VBox>

            <VBox spacing="5">
                <Label text="Type" styleClass="field-label" />
                <TextField fx:id="tfType" promptText="Type (minimum 6 caractères)" styleClass="form-field" />
                <Label fx:id="typeErrorLabel" text="Le type doit contenir au moins 6 caractères" styleClass="error-text" visible="false" />
            </VBox>

            <VBox spacing="5">
                <Label text="Durée" styleClass="field-label" />
                <HBox spacing="10">
                    <TextField fx:id="tfDuration" promptText="Format: HH:MM (min. 60:00)" styleClass="form-field" HBox.hgrow="ALWAYS" />
                    <Button styleClass="icon-button">
                        <graphic>
                            <Region styleClass="clock-icon" />
                        </graphic>
                    </Button>
                </HBox>
                <Label fx:id="durationErrorLabel" text="La durée doit être au format HH:MM et d'au moins 60 minutes" styleClass="error-text" visible="false" />
            </VBox>
        </VBox>

        <Separator />

        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="form-footer">
            <Button text="Annuler" onAction="#handleCancel" styleClass="btn-cancel" />
            <Button fx:id="addButton" text="Ajouter" onAction="#handleAdd" styleClass="btn-submit" />
        </HBox>
    </VBox>
</StackPane>