<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ListeCategoryEventController"
            styleClass="main-container">



    <fx:include source="navbar.fxml" />

    <top>
        <VBox spacing="10" styleClass="header-container">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Liste des Catégories d'Événements" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="+ Ajouter une catégorie" onAction="#openAddForm" styleClass="btn-primary">
                    <effect>
                        <DropShadow color="#00000033" radius="5" />
                    </effect>
                </Button>
            </HBox>

            <HBox styleClass="search-container" alignment="CENTER_LEFT" spacing="10">
                <TextField promptText="Rechercher..." HBox.hgrow="ALWAYS" styleClass="search-field" />
                <ComboBox promptText="Filtrer par type" prefWidth="150" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox styleClass="content-container">
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS" styleClass="elegant-table">
                <columns>
                    <TableColumn fx:id="colLocation" text="Lieu" prefWidth="150" />
                    <TableColumn fx:id="colType" text="Type" prefWidth="150" />
                    <TableColumn fx:id="colDuration" text="Durée" prefWidth="100" />
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="150" />
                </columns>
                <placeholder>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Aucune catégorie d'événement trouvée" styleClass="empty-table-text" />
                        <Label text="Ajoutez une nouvelle catégorie pour commencer" styleClass="empty-table-subtext" />
                    </VBox>
                </placeholder>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <effect>
                    <DropShadow color="#00000026" radius="4" />
                </effect>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" styleClass="footer-container">
            <Label text="Total des catégories: " styleClass="summary-text" />
            <Label fx:id="totalCategoriesLabel" text="0" styleClass="summary-value" />
            <Region HBox.hgrow="ALWAYS" />
            <Pagination fx:id="tablePagination" pageCount="5" maxPageIndicatorCount="5" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Rafraîchir" onAction="#refreshTable" styleClass="btn-secondary">
                <graphic>
                    <Region styleClass="refresh-icon" />
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>