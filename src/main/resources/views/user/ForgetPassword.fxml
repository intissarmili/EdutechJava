<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.user.ForgetPasswordController" prefWidth="400" prefHeight="500">
    <children>
        <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300">
            <Label text="Mot de passe oublié ?" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <Label text="Email :" />
                <TextField fx:id="emailField" promptText="Entrez votre email" />
            </HBox>
            <Button fx:id="sendCodeButton" text="Envoyer le code" onAction="#handleSendCode" />
            <HBox spacing="10">
                <Label text="Code reçu :" />
                <TextField fx:id="codeField" promptText="Entrez le code" />
            </HBox>
            <Button fx:id="verifyButton" text="Vérifier le code" onAction="#handleVerifyCode" />
            <HBox spacing="10">
                <Label text="Nouveau mot de passe :" />
                <PasswordField fx:id="newPasswordField" promptText="Entrez un nouveau mot de passe" />
            </HBox>
            <HBox spacing="10">
                <Label text="Confirmer le mot de passe :" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirmez le mot de passe" />
            </HBox>
            <Button fx:id="resetPasswordButton" text="Réinitialiser" onAction="#handleResetPassword" />
        </VBox>
    </children>
</AnchorPane>
