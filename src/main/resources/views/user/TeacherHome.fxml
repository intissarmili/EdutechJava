<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.user.TeacherHomeController"
            prefWidth="500" prefHeight="420"
            style="-fx-background-color: linear-gradient(to bottom right, #ff5f6d, #ffc371);">

    <VBox alignment="CENTER" spacing="15"
          AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="50"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30;">

        <!-- Title -->
        <Label text="Bienvenue Professeur 👨‍🏫"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <!-- Info Fields -->
        <Label fx:id="fullNameLabel" text="Nom complet : ..." style="-fx-text-fill: #555;" />
        <Label fx:id="emailLabel" text="Email : ..." style="-fx-text-fill: #555;" />
        <Label fx:id="phoneLabel" text="Téléphone : ..." style="-fx-text-fill: #555;" />
        <Label fx:id="roleLabel" text="Rôle : ..." style="-fx-text-fill: #555;" />

        <!-- Stats Section -->
        <HBox spacing="20" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="20" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label text="Cours" style="-fx-text-fill: #777;" />
            </VBox>
            <VBox alignment="CENTER">
                <Label text="5" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label text="Classes" style="-fx-text-fill: #777;" />
            </VBox>
            <VBox alignment="CENTER">
                <Label text="102" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label text="Étudiants" style="-fx-text-fill: #777;" />
            </VBox>
        </HBox>

        <!-- Buttons -->
        <Button text="Voir plus"
                style="-fx-background-color: linear-gradient(to right, #ff416c, #ff4b2b); -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 20;" />

        <Button text="Déconnexion" onAction="#handleLogout"
                style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-underline: true;" />
    </VBox>
</AnchorPane>
