<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.user.StudentHomeController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom right, #ff5f6d, #ffc371);">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30"
          AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="30"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30;">

        <Label fx:id="fullNameLabel"
               text="Nom complet : ..."
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <Label fx:id="emailLabel" text="Email : ..." style="-fx-text-fill: #555;" />
        <Label fx:id="phoneLabel" text="Téléphone : ..." style="-fx-text-fill: #555;" />
        <Label fx:id="roleLabel" text="Rôle : ..." style="-fx-text-fill: #555;" />

        <HBox spacing="20" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label text="65" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label text="Amis" style="-fx-text-fill: #777;" />
            </VBox>
            <VBox alignment="CENTER">
                <Label text="43" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label text="Photos" style="-fx-text-fill: #777;" />
            </VBox>
            <VBox alignment="CENTER">
                <Label text="21" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label text="Commentaires" style="-fx-text-fill: #777;" />
            </VBox>
        </HBox>

        <Button text="Voir plus"
                style="-fx-background-color: #ff6a00; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 20;" />

        <Button text="Déconnexion" onAction="#handleLogout"
                style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-underline: true;" />
    </VBox>
</AnchorPane>
