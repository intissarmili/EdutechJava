<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ModifierReservationController" prefHeight="500.0" prefWidth="600.0">

    <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <Label text="Update Reservation" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="15">
            <padding><Insets top="20"/></padding>

            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="150"/>
                <ColumnConstraints prefWidth="350" hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Topic -->
            <Label text="Topic:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="topicField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Start Time -->
            <Label text="Start Time:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <HBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <DatePicker fx:id="datePicker" prefWidth="200"/>
                <ComboBox fx:id="hourComboBox" prefWidth="80"/>
                <ComboBox fx:id="minuteComboBox" prefWidth="80"/>
            </HBox>

            <!-- Status -->
            <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="statusComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Duration -->
            <Label text="Duration (min):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Spinner fx:id="durationSpinner" editable="true" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <padding><Insets top="20"/></padding>
            <Button text="Cancel" onAction="#cancelAction"/>
            <Button text="Update" onAction="#updateReservationAction"/>
        </HBox>
    </VBox>
</AnchorPane>
