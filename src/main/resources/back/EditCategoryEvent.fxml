<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.EditCategoryEventController" spacing="20" style="-fx-background-color: #f5f7fa;">
    <padding>
        <Insets top="25" right="30" bottom="25" left="30"/>
    </padding>

    <Label text="Modifier une catégorie d'événement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <GridPane vgap="15" hgap="15" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Lieu:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
        <TextField fx:id="tfLocation" promptText="Lieu (min. 6 caractères)" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-padding: 8;"/>

        <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
        <TextField fx:id="tfType" promptText="Type (min. 6 caractères)" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-padding: 8;"/>

        <Label text="Durée:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
        <TextField fx:id="tfDuration" promptText="Durée (min. 60:00)" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-padding: 8;"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="updateButton" text="Mettre à jour" onAction="#handleUpdate" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 4;"/>
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 4;"/>
    </HBox>

    <Label text="Note: Les champs en rouge indiquent une saisie invalide" style="-fx-font-style: italic; -fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
</VBox>