<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.back.modifierQuestionController" spacing="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <Label text="Modifier Question" style="-fx-font-weight: bold; -fx-font-size: 16;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <children>
            <Label text="Question:" GridPane.rowIndex="0"/>
            <TextField fx:id="questionField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Option 1:" GridPane.rowIndex="1"/>
            <TextField fx:id="option1Field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Option 2:" GridPane.rowIndex="2"/>
            <TextField fx:id="option2Field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Option 3:" GridPane.rowIndex="3"/>
            <TextField fx:id="option3Field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="RÃ©ponse Correcte:" GridPane.rowIndex="4"/>
            <ComboBox fx:id="correctAnswerCombo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Quiz ID:" GridPane.rowIndex="5"/>
            <ComboBox fx:id="quizIdCombo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Certification ID:" GridPane.rowIndex="6"/>
            <ComboBox fx:id="certifIdCombo" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </children>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel"/>
        <Button text="Enregistrer" onAction="#handleSave" defaultButton="true" style="-fx-base: #0093ff;"/>
    </HBox>
</VBox>