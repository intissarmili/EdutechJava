<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.back.ListeCategoryEventController" style="-fx-background-color: #f5f7fa;">
    <top>
        <VBox spacing="10" style="-fx-padding: 10px;">
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                <Label text="Liste des Catégories d'Événements" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="Rechercher..."
                           style="-fx-background-radius: 4; -fx-pref-width: 200px;" />
                <Button text="+ Ajouter une catégorie" onAction="#openAddForm"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 4;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableView" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
            <columns>
                <TableColumn fx:id="colLocation" text="Lieu" prefWidth="200" style="-fx-font-weight: bold;"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="200" style="-fx-font-weight: bold;"/>
                <TableColumn fx:id="colDuration" text="Durée" prefWidth="150" style="-fx-font-weight: bold;"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="200" style="-fx-font-weight: bold;"/>
            </columns>
            <placeholder>
                <Label text="Aucune catégorie d'événement disponible" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
            </placeholder>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 15px;">
            <Button text="Rafraîchir" onAction="#refreshTable"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 4;"/>
        </HBox>
    </bottom>
</BorderPane>