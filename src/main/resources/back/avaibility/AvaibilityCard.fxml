<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: white; 
             -fx-padding: 18 20; 
             -fx-border-color: #eaeaea; 
             -fx-border-width: 1; 
             -fx-border-radius: 8; 
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);"
      spacing="12" prefWidth="320" prefHeight="180">
      
    <!-- Card Top Section with Priority Indicator -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <Circle radius="6" fill="#42A5F5" opacity="0.9"/>
        <Label fx:id="dateLabel" 
               style="-fx-font-weight: bold; 
                      -fx-font-size: 15; 
                      -fx-text-fill: #424242;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="ID: 82" style="-fx-font-size: 12; -fx-text-fill: #9e9e9e;"/>
    </HBox>
    
    <!-- Card Content -->
    <VBox spacing="8" VBox.vgrow="ALWAYS">
        <Label fx:id="timeLabel" 
               style="-fx-font-size: 14; 
                      -fx-text-fill: #555555;"/>
        <Label fx:id="tutorLabel" 
               style="-fx-font-size: 14; 
                      -fx-text-fill: #444444;"/>
    </VBox>
    
    <!-- Card Footer with Action Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="detailsButton" text="Details"
                style="-fx-background-color: #f5f5f5; 
                       -fx-text-fill: #616161; 
                       -fx-font-weight: normal; 
                       -fx-padding: 7 14; 
                       -fx-background-radius: 4; 
                       -fx-font-size: 12px;"/>
        <Button fx:id="reserveButton" text="Reserve"
                style="-fx-background-color: #42A5F5; 
                       -fx-text-fill: white; 
                       -fx-font-weight: normal; 
                       -fx-padding: 7 14; 
                       -fx-background-radius: 4; 
                       -fx-font-size: 12px;"/>
    </HBox>
</VBox>