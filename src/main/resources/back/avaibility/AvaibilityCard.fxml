<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: #f8f9fa; -fx-padding: 18; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 1);"
      spacing="12" prefWidth="320">
    <Label fx:id="dateLabel" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #333333;"/>
    <Label fx:id="timeLabel" style="-fx-font-size: 14; -fx-text-fill: #555555;"/>
    <Label fx:id="tutorLabel" style="-fx-font-size: 14; -fx-text-fill: #444444;"/>
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button fx:id="detailsButton" text="Details"
                style="-fx-background-color: #f0f0f0; -fx-text-fill: #333333; -fx-font-weight: normal; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        <Button fx:id="reserveButton" text="Reserve"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
    </HBox>
</VBox>