<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-padding: 30; -fx-background-color: #f7f9fc;">

    <!-- Conteneur principal des questions -->
    <VBox spacing="25" style="-fx-padding: 20; -fx-max-width: 600;">

        <!-- Première question -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="How are you feeling today?" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="2 points" style="-fx-font-size: 12px; -fx-text-fill: #5f6368;"/>

            <VBox spacing="8" style="-fx-padding: 5 0 0 0;">
                <CheckBox text="Well"/>
                <CheckBox text="Good"/>
                <CheckBox text="Not too bad"/>
                <CheckBox text="Thats none of your business"/>
            </VBox>
        </VBox>

        <!-- Deuxième question -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="How is your online classes experience going so far?" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="2 points" style="-fx-font-size: 12px; -fx-text-fill: #5f6368;"/>

            <VBox spacing="8" style="-fx-padding: 5 0 0 0;">
                <CheckBox text="Very good"/>
                <CheckBox text="Not too bad"/>
                <CheckBox text="I prefer not to say!"/>
                <CheckBox text="None of these"/>
            </VBox>
        </VBox>

        <!-- Troisième question -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="What is the capital of Pakistan" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="2 points" style="-fx-font-size: 12px; -fx-text-fill: #5f6368;"/>

            <VBox spacing="8" style="-fx-padding: 5 0 0 0;">
                <CheckBox text="Islamabad"/>
                <!-- Ajoutez d'autres options ici -->
            </VBox>
        </VBox>
    </VBox>

    <!-- Boutons de navigation -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Précédent"
                style="-fx-background-color: #f1f3f4; -fx-text-fill: #3c4043; -fx-font-weight: bold;"/>
        <Button text="Suivant"
                style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>