<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.NotificationItemController"
      spacing="10"
      style="-fx-background-radius: 5px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);">
    
    <!-- Unread Indicator -->
    <Circle fx:id="unreadIndicator" radius="5" visible="false"/>
    
    <!-- Content -->
    <VBox spacing="5">
        <Label fx:id="contentLabel" wrapText="true" style="-fx-font-size: 14px;"/>
        <Label fx:id="timeLabel" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
    </VBox>
    
    <padding>
        <Insets top="10" right="15" bottom="10" left="15"/>
    </padding>
</HBox> 